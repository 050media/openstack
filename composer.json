{
    "name": "openstack",
    "autoload": {
        "psr-4": {
            "OpenStack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenStack\\Test\\": "tests/",
            "OpenStack\\Integration\\": "integration/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/php-opencloud/Sami"
        }
    ],
    "require": {
        "php": ">=5.5",
        "guzzlehttp/guzzle": "~5.2",
        "guzzlehttp/log-subscriber": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "phpspec/prophecy-phpunit": "~1.0",
        "sami/sami": "dev-master"
    }
}